<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        
<%= gravatar_for @user %>

        
<%= @user.name %>
<%= @user.email %>
<%= @user.location %>

      </h1>
    </section>
  </aside>
  <div class="col-md-8">
      
      <%= render 'follow_form' if logged_in? %>
    
<% if @user.microposts.any? %>

      <h3>Microposts (<%= @user.microposts.count %>)
      <a href="<%= following_user_path(@user) %>">Following(<%= @user.following_relationships.count %>)</a>
      <a href="<%= followers_user_path(@user) %>">Follower(<%= @user.follower_relationships.count %>)</a>
　　　
　　　
　　　
　　　
      <ol class="microposts">
        
<%= render @microposts %>

      </ol>
    
<% end %>

  </div>
</div>